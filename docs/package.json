{
  "name": "@openvaa/docs",
  "description": "OpenVAA Documentation Site",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "generate:docs": "tsx scripts/generate-all-docs-and-validate.ts",
    "generate:component-docs": "tsx scripts/extract-component-docs.ts",
    "generate:navigation": "tsx scripts/generate-navigation-config.ts",
    "generate:route-map": "tsx scripts/generate-route-map.ts",
    "validate:links": "tsx scripts/validate-links.ts"
  },
  "dependencies": {
    "@openvaa/app-shared": "workspace:^"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.39.1",
    "@openvaa/shared-config": "workspace:^",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/browser-playwright": "^4.0.15",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "mdsvex": "^0.12.6",
    "playwright": "^1.58.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "svelte": "^4.2.20",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.1",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.4.21",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^2.1.9",
    "vitest-browser-svelte": "^2.0.1"
  }
}
