{
  "$schema": "./settings-schema.json",
  "appVersion": {
    "version": 1,
    "requireUserDataVersion": 1,
    "source": "https://github.com/OpenVAA/voting-advice-application/tree/deploy-nuortenvaalikone"
  },
  "admin": {
    "email": "vaalikone@nuorisoala.fi"
  },
  "colors": {
    "light": {
      "primary": "#00a18e",
      "secondary": "#666666",
      "accent": "#00a18e",
      "neutral": "#333333",
      "base-100": "#ffffff",
      "base-200": "#e3fbf4",
      "base-300": "#cbf8ea",
      "warning": "#a82525",
      "line-color": "#d9d9d9"
    },
    "dark": {
      "primary": "#00ccb4",
      "secondary": "#8c8c8c",
      "accent": "#00ccb4",
      "neutral": "#cccccc",
      "base-100": "#000000",
      "base-200": "#141a18",
      "base-300": "#27332f",
      "warning": "#e16060",
      "line-color": "#262626"
    }
  },
  "font": {
    "name": "Rubik",
    "url": "https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap')",
    "style": "sans"
  },
  "supportedLocales": [
    {
      "code": "fi",
      "name": "Suomi",
      "isDefault": true
    },
    {
      "code": "sv",
      "name": "Svenska"
    },
    {
      "code": "en",
      "name": "English"
    }
  ],
  "analytics": {
    "platform": {
      "name": "umami",
      "code": "8a95037a-8e58-406c-944c-f5c848060a57",
      "infoUrl": "https://umami.is/"
    },
    "survey": {
      "linkTemplate": "https://polscihelsinki.eu.qualtrics.com/jfe/form/SV_8va9vZJTfeT4Pwa?vaaID={sessionId}",
      "showIn": ["frontpage", "entityDetails", "navigation", "resultsPopup"]
    },
    "trackEvents": true
  },
  "entityDetails": {
    "contents": {
      "candidate": ["info", "opinions"],
      "party": ["info", "candidates"]
    },
    "showMissingElectionSymbol": {
      "candidate": true,
      "party": false
    },
    "showMissingAnswers": {
      "candidate": true,
      "party": true
    }
  },
  "header": {
    "showFeedback": true,
    "showHelp": false
  },
  "matching": {
    "minimumAnswers": 1,
    "partyMatching": "median"
  },
  "questions": {
    "showCategoryTags": false,
    "showIntroPage": false,
    "showResultsLink": false
  },
  "results": {
    "cardContents": {
      "candidate": [
        {
          "question": "8",
          "format": "tag",
          "hideLabel": true
        }
      ],
      "party": [
        "candidates",
        {
          "question": "500"
        }
      ]
    },
    "showFeedbackPopup": 60,
    "showSurveyPopup": 180,
    "sections": ["party", "candidate"]
  }
}
