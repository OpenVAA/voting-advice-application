{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo",
    "lib": ["es2022"],
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*", 
    "**/*.test.ts"
  ],
  "references": [
    {"path": "../vaa-core/tsconfig.json"}
  ]
}
